 <h2 class="text-center">Mis Ventas</h2>
{{#if tickets.length}}
<div class="container wide-container">
    <table class="user-table">
        <thead class="table-header">
            <tr>
                <th>Date</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Total</th>
                <th>Ticket #</th>
            </tr>
        </thead>

        <tbody>
            {{#each tickets}}
            <tr class="table-row">
                <td>{{this.purchase_datetime}}</td>
                <td>{{this.customerName}}</td>
                <td>{{this.purchaser}}</td>
                <td>â‚¬ {{this.ammount}}</td>
                <td>{{this.code}}</td>
            </tr>
            {{/each}}
        </tbody>


    </table>


    <div class="pagination">
        {{#if (ne currentPage 1)}}
            <a class="page-link" href="?page=1&limit={{limit}}">First</a>
            <a class="page-link" href="?page={{dec currentPage}}&limit={{limit}}">Prev</a>
        {{/if}}
        <span class="current-page">Page {{currentPage}} of {{totalPages}}</span>
        {{#if (lt currentPage totalPages)}}
            <a class="page-link" href="?page={{inc currentPage}}&limit={{limit}}">Next</a>
            <a class="page-link" href="?page={{totalPages}}&limit={{limit}}">Last</a>
        {{/if}}
    </div>
</div>                     


{{else}}
<p>No sales registered.</p>
{{/if}}
 
